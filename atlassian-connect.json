{
  "key": "sauce-hipchat-service",
  "name": "Sauce Labs for HipChat",
  "description": "Sauce Labs plugin description",
  "vendor": {
    "name": "Sauce Labs",
    "url": "https://www.saucelabs.com"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ],
      "avatar": {
        "url": "{{localBaseUrl}}/img/logo.png",
        "url@2x": "{{localBaseUrl}}/img/logo.png"
      }
    },
    "installable": {
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": [{
      "url": "{{localBaseUrl}}/webhooks/saucelabs_url",
      "pattern": "https?:\/\/saucelabs.com\/beta\/tests\/.*",
      "event": "room_message",
      "name": "Sauce Labs",
      "authentication": "jwt"
    }, {
      "url": "{{localBaseUrl}}/webhooks/sauce",
      "pattern": "^\/sauce\b*",
      "event": "room_message",
      "name": "Sauce Labs",
      "authentication": "jwt"
    }],
    "glance": [
      {
        "name": { "value": "Hello!" },
        "queryUrl": "{{localBaseUrl}}/glance",
        "key": "sample.glance",
        "target": "sidebar.joblist",
        "icon": {
          "url": "{{localBaseUrl}}/img/logo.png",
          "url@2x": "{{localBaseUrl}}/img/logo.png"
        }
      }
    ],
    "webPanel": [
      {
        "key": "sidebar.joblist",
        "name": {
          "value": "Sauce Labs Sidebar!"
        },
        "location": "hipchat.sidebar.right",
        "url": "{{localBaseUrl}}/sidebar"
      }
    ],
    "dialog": [
      {
        "key": "job.video.dialog",
        "title": { "value": "Video Dialog" },
        "url": "{{localBaseUrl}}/dialog/video/{message.metadata.jobId}",
        "options": {
          "style": "normal",
          "size": { "width": "1024px", "height": "768px" }
        }
      }
    ],
    "action": [
      {
        "key": "sample.action",
        "name": {
          "value": "Open Hello Dialog!"
        },
        "target": "sample.dialog",
        "location": "hipchat.input.action"
      }
    ]
  }
}
